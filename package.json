{
	"name": "Blanko-API",
	"version": "0.0.2",
	"description": "Boilerplate api",
	"license": "ISC",
	"author": "Noud Adrichem",
	"main": "dist",
	"scripts": {
		"dev": "NODE_ENV=development nodemon -w src --exec \"babel-node src -s --presets es2015,stage-0\" | bunyan -o short",
		"build": "babel src -s -D -d dist --presets es2015,stage-0",
		"start": "NODE_ENV=production pm2 start dist --name blanko",
		"prestart": "npm run -s build",
		"lint": "eslint src",
		"docker": "node dist ."
	},
	"dependencies": {
		"bcrypt-nodejs": "0.0.3",
		"bluebird": "^3.5.3",
		"body-parser": "^1.18.3",
		"express": "^4.16.4",
		"express-jwt": "^5.3.0",
		"gulp": "^3.9.1",
		"gulp-babel": "^7.0.1",
		"jsonwebtoken": "^7.4.3",
		"mongoose": "^4.13.17",
		"morgan-body": "^2.4.5",
		"nodemailer": "^4.7.0",
		"passport": "^0.4.0",
		"passport-local": "^1.0.0",
		"passport-local-mongoose": "^4.5.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-eslint": "^7.2.3",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"bunyan": "^1.8.12",
		"bunyan-format": "^0.2.1",
		"eslint": "^4.19.1",
		"nodemon": "^1.18.6"
	}
}
